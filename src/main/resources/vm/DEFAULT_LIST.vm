<!-- Title -->
<div class="w3-row w3-padding-64" style="padding-bottom: 5px!important">
    <div class="w3-container" style="width: 90%; float: left">
        <h2 class="w3-text-teal">$title</h2>
    </div>
    <div class="select_btn">
        <button class="w3-btn w3-white w3-border w3-round-large" style="padding-top: 3px; padding-bottom: 3px;" onclick="$selectFn"><b>Search</b></button>
    </div>
</div>

<!-- Search Area -->
<div class="w3-container w3-section w3-light-grey w3-border-dark-grey
        w3-hover-border-light-blue  w3-leftbar w3-rightbar w3-round w3-margin-left w3-margin-right" style="margin-top: 0px!important;">
    <div id="searchArea">
        <form id="$SEARCHS_FORM" class="searchForm">
        $SEARCHS
        </form>
    </div>
</div>

<!-- List Area -->
<div class="w3-center w3-padding-32 w3-margin-left w3-margin-right" style="z-index: 1">
    <table id="SEARCH_GRID"><tr><td></td></tr></table>
    <div id="SEARCH_GRID_PAGER"></div>
</div>
<script>
    $bindScript
    $script

    $(function(){
        /*$("#SEARCH_GRID").jqGrid({
            colNames: ["검색버튼을 눌러주세요."],
            colModel: [
                { name: "invid", width: "100%", sortable: false, align: "left" }
            ],
            gridview: true,
            autowidth: true,
            autoencode: true
        });*/

	    $("#SEARCH_GRID").jqGrid({
		    url:'commonGridSelectList.do',
			id: "SEARCH_GRID",
		    mtype:'post',
		    serializeGridData : function (postData) {
			    postData.formData = JSON.stringify();
			    return JSON.stringify(postData);
		    },
		    datatype: "json",
		    colNames:['Inv No','Date', 'Client', 'Amount','Tax','Total','Notes'],
		    colModel:[
			    {name:'ID',index:'ID', width:55},
			    {name:'INVDATE',index:'INVDATE', width:90, jsonmap:"INVDATE"},
			    {name:'NAME',index:'NAME asc, INVDATE', width:100},
			    {name:'AMOUNT',index:'AMOUNT', width:80, align:"right"},
			    {name:'TAX',index:'TAX', width:80, align:"right"},
			    {name:'TOTAL',index:'TOTAL', width:80,align:"right"},
			    {name:'NOTE',index:'NOTE', width:150, sortable:false}
		    ],
		    rowNum:10,
		    rowList:[10,20,30],
		    pager: '#SEARCH_GRID_PAGER',
		    sortname: 'ID',
		    viewrecords: true,
		    sortorder: "desc",
		    jsonReader : {
			    page: "page",
			    total: "total",
			    root: "data",
			    records: function(obj){return obj.length;},
			    repeatitems: false,
			    id: "id"
		    },
		    gridview: true,
		    autowidth: true,
			autoheight: true,
		    autoencode: true

	    });

	    $(window).resize(function() {
		    //$("#SEARCH_GRID").setGridWidth($(this).width() * 100);
	    });


    });
</script>